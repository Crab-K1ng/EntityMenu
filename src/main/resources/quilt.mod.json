{
  "schema_version": 1,

  "quilt_loader": {
    "group": "${mod_group}",
    "id": "${mod_id}",
    "version": "${mod_version}",

    "intermediate_mappings":"net.fabricmc:intermediary",

    "metadata": {
      "name": "${mod_name}",
      "description": "to add a menu to my EntityTest mod",
      "contributors": {
        "crabking": "Owner"
      },

      "contact": {
        "homepage": "https://github.com/Crab-K1ng/EntityTest",
        "issues": "https://github.com/Crab-K1ng/EntityTest/issues",
        "sources": "https://github.com/Crab-K1ng/EntityTest"
      },

      "icon": "assets/entity_menu/icon.png"
    },

    "entrypoints": {
      "init": "io.github.CrabK1ng.entity_menu.EntityMenu"
    },

    "depends": [
      {
        "id": "cosmicquilt",
        "versions": "*"
      },
      {
        "id": "cosmicreach",
        "versions": "*"
      }
    ]
  },

  "mixin": "entity_menu.mixins.json"
}
